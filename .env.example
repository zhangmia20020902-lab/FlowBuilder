# ============================================
# FlowBuilder Environment Configuration
# ============================================

# Environment mode (development, production)
NODE_ENV=development

# Port on which the application will run
PORT=3000

# Database host
DB_HOST=localhost

# Database port
DB_PORT=3307

# Database name
DB_NAME=flowbuilder

# Database user
DB_USER=flowbuilder_user

# Database password
DB_PASSWORD=flowbuilder_pass

# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=your-secret-key-change-in-production

# Session cookie name
SESSION_NAME=flowbuilder_session

# Log level (error, warn, info, http, sql, debug)
LOG_LEVEL=debug

# Enable file logging (true/false)
ENABLE_FILE_LOGGING=false
